<% layout('layouts/boilerplate') %>
<!-- <title>New Campground</title> -->
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title: </label>
                <input type="text" class="form-control" name="campground[title]" id="title" placeholder="Enter Camp Name" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location (Specify Location Accurately): </label>
                <input type="text" class="form-control" name="campground[location]" id="location" placeholder="Enter Location of Camp" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price: </label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">&dollar;</span>
                    <input type="number" min="0" step="0.01" class="form-control" name="campground[price]" id="price" placeholder="0.00" ria-label="price" aria-describedby="price-label" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <!-- <input type="number" step="0.01" class="form-control" name="campground[price]" id="price" placeholder="Enter Price of Camp"> -->
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description: </label>
                <textarea class="form-control" name="campground[description]" id="description" placeholder="Enter Description of Camp" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- <div class="mb-3">
                <label for="image" class="form-label">Image URL: </label>
                <input type="text" class="form-control" name="campground[image]" id="image" placeholder="Enter the Image URL" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->
            
            <div class="mb-3 custom-file">
                <label for="image" class="form-label">Upload Images: </label>
                <div class="custom-file">
                    <input type="file" name="image" id="image" class="form-control" multiple>
                    <label class="custom-file-label" for="image"></label>
                </div>
            </div>

            <div class="d-grid mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">Cancel</a>
    </div>
</div>