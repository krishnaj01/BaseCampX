<% layout('layouts/boilerplate') %>
<!-- <title>Edit Campground</title> -->
<div class="row">
    <h1 class="text-center">Edit <%= campground.title %> Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title: </label>
                <input type="text" class="form-control" name="campground[title]" id="title" placeholder="Enter Camp Name" value="<%= campground.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location: </label>
                <input type="text" class="form-control" name="campground[location]" id="location" placeholder="Enter Location of Camp" value="<%= campground.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price: </label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">&dollar;</span>
                    <input type="number" min="0" step="0.01" class="form-control" name="campground[price]" id="price" placeholder="0.00" ria-label="price" aria-describedby="price-label" value="<%= campground.price %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <!-- <input type="number" step="0.01" class="form-control" name="campground[price]" id="price" placeholder="Enter Price of Camp"> -->
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description: </label>
                <textarea class="form-control" name="campground[description]" id="description" placeholder="Enter Description of Camp" required><%= campground.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3 custom-file">
                <label for="image" class="form-label">Add More Images: </label>
                <div class="custom-file">
                    <input type="file" name="image" id="image" class="form-control" multiple>
                    <label class="custom-file-label" for="image"></label>
                </div>
            </div>

            <div class="mb-3 d-flex flex-wrap justify-content-center align-items-end">
                <% campground.images.forEach((img,i) => { %>
                    <div class="d-flex flex-column mb-1 me-2">
                        <img src="<%= img.thumbnail %>" style="width: 200px;" class="img-thumbnail">
                        <div class="d-flex justify-content-center">
                            <input type="checkbox" id="image-<%=i%>" class="me-1" name="deleteImages[]" value="<%=img.filename%>">
                            <label for="image-<%=i%>">Delete?</label>
                        </div>
                    </div>
                <% }) %>
            </div>

            <div class="mb-3">
                <button class="btn btn-info infobtn text-white">Save Changes</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Cancel</a>
    </div>
</div>